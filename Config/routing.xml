<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="degressif.admin.update" path="/admin/module/degressif/save" methods="post">
        <default key="_controller">Degressif\Controller\BackController::saveAction</default>
    </route>

    <route id="degressif.admin.delete" path="/admin/module/degressif/delete" methods="post">
        <default key="_controller">Degressif\Controller\BackController::deleteAction</default>
    </route>

    <route id="degressif.admin.configuration" path="/admin/module/degressif/add" methods="post">
        <default key="_controller">Degressif\Controller\BackController::saveAction</default>
    </route>

</routes>
